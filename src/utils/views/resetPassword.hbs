<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{{title}}</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css"
    />
    <!-- Add any additional meta tags, stylesheets, or scripts in the head if needed -->
  </head>
  <body class="bg-gray-100">

    <div class="container mx-auto p-4">

      <h1 class="text-3xl font-semibold mb-6">{{title}}</h1>

      <form
        id="resetPasswordForm"
        action="{{this.action}}?id={{this.id}}"
        method="post"
        class="max-w-md bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4 mx-auto"
      >
        <div class="mb-4">
          <label
            for="password"
            class="block text-gray-700 text-sm font-bold mb-2"
          >
            New Password:
          </label>
          <input
            type="password"
            id="password"
            name="password"
            required
            class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
          />
        </div>

        <div class="flex items-center justify-between">
          <button
            type="submit"
            class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline"
          >
            {{title}}
          </button>
        </div>
      </form>

    </div>

  </body>
</html>